<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/bt_back"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:background="@mipmap/back"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字符串打印测试"
                android:layout_centerInParent="true"
                style="@style/ActivityTitle"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_home_right_bacground_01"
            />


    <EditText
        android:id="@+id/et_string"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:hint="请在此输入要打印的内容"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/bt_send"
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:text="发送"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/bt_while_send"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorAccent"
            android:text="循环发送字符串H"
            />


        <Button
            android:id="@+id/bt_stop_send"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"
            android:text="停止循环发送"
            />
    </LinearLayout>

        <Button
            android:id="@+id/bt_out_paper"
            android:layout_width="600dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="退纸"
            />
    </LinearLayout>
</LinearLayout>