<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="600dp"
    android:layout_height="600dp"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="自检模式中..."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_print_next_code"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            style="@style/HomeSmallButtonText"
            android:text="打印下一个编码区"
            android:background="@color/color_home_button_bacground_02"
            />


        <Button
            android:id="@+id/bt_speed_switch"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            style="@style/HomeSmallButtonText"
            android:text="速度切换"
            android:layout_marginLeft="10dp"
            android:background="@color/color_home_button_bacground_02"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_start_stop"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            style="@style/HomeSmallButtonText"
            android:text="暂停/继续"
            android:background="@color/color_home_button_bacground_02"
            />


        <Button
            android:id="@+id/bt_in_paper"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            style="@style/HomeSmallButtonText"
            android:text="进纸"
            android:layout_marginLeft="10dp"
            android:background="@color/color_home_button_bacground_02"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="180dp"
        android:layout_height="35dp"
        style="@style/HomeSmallButtonText"
        android:text="退出"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>